<article{{ attributes }}>
  {% if content %}
    <div class="components components--computed">
      {% embed "@hdbt/misc/component.twig" with { component_classes: ['component--user-info-container'] } %}
        {% block component_content %}
          {{- content -}}
        {% endblock component_content %}
      {% endembed %}
    </div>
  {% endif %}
</article>
